
public class Equation {

	NonTerminal start;
	int containsNT = 1;
	public Equation(NonTerminal start) {
		this.start = start;
	}
	
	public boolean containsNonTerminal() {
		if(containsNT == 0)
			return true;
		else 
			return false;
	}
	
	public void decreaseNonTerminal() {
		containsNT--;
	}
	
	public void increaseNonTerminal() {
		containsNT++;
	}
}
